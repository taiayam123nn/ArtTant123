    <script>
        // Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Dynamic Form Logic
        const projectScaleSelect = document.getElementById('project-scale');
        const dynamicFieldsContainer = document.getElementById('dynamic-fields-container');

        projectScaleSelect.addEventListener('change', (event) => {
            dynamicFieldsContainer.innerHTML = ''; // Clear previous fields
            if (event.target.value === 'large') {
                const largeScaleFields = `
                    <div>
                        <label for="team-size" class="block text-sm font-medium text-gray-700 mb-1">Company Size / Number of Employees</label>
                        <input type="number" id="team-size" name="team-size" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-brand-blue focus:border-brand-blue">
                    </div>
                    <div>
                        <label for="revenue" class="block text-sm font-medium text-gray-700 mb-1">Annual Revenue (Approx.)</label>
                        <input type="text" id="revenue" name="revenue" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-brand-blue focus:border-brand-blue" placeholder="e.g., $5M - $10M">
                    </div>
                     <div>
                        <label for="data-sources" class="block text-sm font-medium text-gray-700 mb-1">Key Data Sources to Analyze</label>
                        <input type="text" id="data-sources" name="data-sources" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-brand-blue focus:border-brand-blue" placeholder="e.g., Financial, Operational, Customer Data">
                    </div>
                `;
                dynamicFieldsContainer.innerHTML = largeScaleFields;
            }
        });

        // Form Submission Handler
        const consultationForm = document.getElementById('consultation-form');
        const successMessage = document.getElementById('form-success-message');

        consultationForm.addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent actual submission
            
            // In a real application, you would send this data to a server or email service.
            const formData = new FormData(this);
            console.log('Form Submitted. Data:');
            for (let [key, value] of formData.entries()) {
                console.log(key, value);
            }

            // Show success message and hide the form
            consultationForm.reset();
            dynamicFieldsContainer.innerHTML = '';
            successMessage.classList.remove('hidden');
            
            // Optional: hide the success message after a few seconds
             setTimeout(() => {
                successMessage.classList.add('hidden');
            }, 5000);
        });
    </script>
</body>
